<div class="user-info">
    <AuthorizeView>
        <Authorizing>
            <text>...</text>
        </Authorizing>
        <Authorized>
            <img src="img/user.svg" />
            <div>
                <span class="username">@context.User.Identity.Name</span>
                <a href="user/signout" class="sign-out">Sign out</a>
            </div>
        </Authorized>
        <NotAuthorized>
            <a href="user/signin" class="sign-in">Sign in</a>
        </NotAuthorized>
    </AuthorizeView>
</div>